<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Project - <%= project.name %></title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: #f8f9fa;
      color: #333;
    }
    .container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    h1 {
      color: #2c3e50;
      margin-bottom: 1.5rem;
    }
    label {
      display: block;
      margin: 1.2rem 0 0.4rem;
      font-weight: bold;
      color: #495057;
    }
    input, textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ced4da;
      border-radius: 6px;
      box-sizing: border-box;
      font-size: 1rem;
    }
    textarea {
      height: 140px;
      resize: vertical;
    }
    .member-checkbox {
      margin: 0.6rem 0;
      font-size: 1rem;
    }
    button.save {
      padding: 14px 32px;
      background: #28a745;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 1.1rem;
      cursor: pointer;
      margin-top: 1.5rem;
    }
    button.save:hover {
      background: #218838;
    }
    a.cancel {
      padding: 14px 32px;
      background: #dc3545;
      color: white;
      text-decoration: none;
      border-radius: 6px;
      margin-left: 1rem;
      font-size: 1.1rem;
    }
    .message {
      padding: 1rem;
      margin-bottom: 1.5rem;
      border-radius: 6px;
    }
    .success { background: #d4edda; color: #155724; }
    .error   { background: #f8d7da; color: #721c24; }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container">
    <h1>Edit Project: <%= project.name %></h1>

    <% if (success_msg) { %>
      <div class="message success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
      <div class="message error"><%= error_msg %></div>
    <% } %>

    <form action="/projects/<%= project._id %>?_method=PUT" method="POST">
      <% if (isLeader) { %>
        <label for="name">Project Name</label>
        <input type="text" id="name" name="project[name]" value="<%= project.name %>" required>

        <label for="description">Description</label>
        <textarea id="description" name="project[description]" required><%= project.description %></textarea>

        <label for="price">Price (â‚¬)</label>
        <input type="number" id="price" name="project[price]" value="<%= project.price %>" step="0.01" min="0" required>

        <label for="startDate">Start Date</label>
        <input type="date" id="startDate" name="project[startDate]" 
               value="<%= project.startDate ? new Date(project.startDate).toISOString().split('T')[0] : '' %>" required>

        <label for="endDate">End Date</label>
        <input type="date" id="endDate" name="project[endDate]" 
               value="<%= project.endDate ? new Date(project.endDate).toISOString().split('T')[0] : '' %>" required>

        <h2>Assign Team Members</h2>
        <% members.forEach(member => { %>
          <label>
            <input type="checkbox" name="members" value="<%= member._id %>" 
              <%= project.members.some(m => m._id.equals(member._id)) ? 'checked' : '' %> >
            <%= member.username %>
          </label>
        <% }) %>
      <% } %>

      <label for="completedJobs">Completed Jobs / Progress So Far</label>
      <textarea id="completedJobs" name="project[completedJobs]"><%= project.completedJobs %></textarea>

      <button type="submit">Save Changes</button>
    </form>

  </div>
</body>
</html>